# Azure Backend API Configuration
VITE_API_URL=http://localhost:3002

# Azure PostgreSQL Configuration (for backend)
# No need for frontend credentials - all DB access goes through backend API

# Application Configuration
VITE_ENABLE_LOCAL_STORAGE_FALLBACK=false
VITE_APP_MODE=production

# SMS Configuration (Twilio)
# Get these from https://www.twilio.com/console
VITE_SMS_ENABLED=false
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Resend)
# Get API key from https://resend.com/api-keys
VITE_EMAIL_ENABLED=false
VITE_EMAIL_API_KEY=your_resend_api_key_here
VITE_EMAIL_FROM=noreply@sevasangraha.com
VITE_EMAIL_FROM_NAME=Sevasangraha Hospital